<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="my_service1">Etheriq\LessonBundle\Service\MyService</parameter>
        <parameter key="my_service1.param1">YuriyX</parameter>
        <parameter key="my_service1.param2">TarnavskiyX</parameter>

        <parameter key="finder_symfony">Symfony\Component\Finder\Finder</parameter>

        <parameter key="my_finder">Etheriq\LessonBundle\Service\MyFinder</parameter>
        <parameter key="my_finder.name">*</parameter>
        <parameter key="my_finder.depth">0</parameter>
        <parameter key="my_finder.size">&lt; 10K</parameter>
        <parameter key="my_finder.inDir">/var/www</parameter>

        <parameter key="my_mail_send">Etheriq\LessonBundle\Service\MyMailSender</parameter>

    </parameters>

    <services>
        <service id="mySimplyService" class="%my_service1%">
            <argument >%my_service1.param1%</argument>
            <argument>%my_service1.param2%</argument>
        </service>

        <service id="finder" class="%finder_symfony%">
        </service>

        <service id="myFinder" class="%my_finder%">
            <argument type="service" id="finder" />
            <argument>%my_finder.name%</argument>
            <argument>%my_finder.depth%</argument>
            <argument>%my_finder.size%</argument>
            <argument>%my_finder.inDir%</argument>
        </service>

        <service id="myMailSend" class="%my_mail_send%">
            <call method="initMailer">
                <argument type="service" id="swiftmailer.mailer" />
            </call>
        </service>
    </services>

</container>